{
  "name": "git-cli",
  "displayName": "git-cli",
  "description": "create commit and branch",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:git-cli.newBranch",
    "onCommand:git-cli.newCommit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-cli.newBranch",
        "title": "New branch"
      },
      {
        "command": "git-cli.newCommit",
        "title": "New Commit"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "git-cli.newBranch",
          "when": "scmProvider == git",
          "group": "navigation"
        },
        {
          "command": "git-cli.newCommit",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "git-cli",
      "properties": {
        "git-cli.taskIdRegexValidation": {
          "type": "string",
          "default": "/^((d){4})$/"
        },
        "git-cli.commitTaskIdFromBranchRegex": {
          "type": "string",
          "default": "/(d){4}/"
        },
        "git-cli.commitDescriptionFromBranchRegex": {
          "type": "string",
          "default": "/[A-Za-z-]+$/"
        },
        "git-cli.scopeOptions": {
          "type": "array",
          "default": [
            {
              "label": "local-app"
            },
            {
              "label": "common"
            },
            {
              "label": "components"
            }
          ],
          "description": "scopeOptions"
        },
        "git-cli.commitActionOptions": {
          "type": "array",
          "default": [
            {
              "label": "added"
            },
            {
              "label": "fixed"
            },
            {
              "label": "removed"
            }
          ]
        },
        "git-cli.branchTypeOptions": {
          "type": "array",
          "default": [
            {
              "label": "feature"
            },
            {
              "label": "bugfix"
            },
            {
              "label": "hotfix"
            },
            {
              "label": "internal",
              "details": "interan change in monorepo, script, library updates etc."
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {}
}

